<style>
  .footer {
    align-items: center;
    background: var(--color-black);
    color: var(--color-white);
    display: grid;
    gap: 1rem;
    font-size: 0.875rem;
    overflow: hidden;
    padding: 1rem 3rem;
    position: relative;
  }
  div:nth-child(2) {
    text-align: center;
  }

  .footer-section-one {
    align-items: center;
    display: grid;
    gap: 1rem;
    grid-template-columns: auto;
    font-size: 0.875rem;
    overflow: hidden;
    padding: 1rem 3rem;
  }
  .footer:after {
    animation: var(--animation-gradient-shift);
    background: var(--color-gradient);
    background-size: 200%;
    top: 0;
    content: "";
    height: 1px;
    left: 0;
    position: absolute;
    width: 100%;
  }

  @media (min-width: 760px) {
    .footer-section-one {
      grid-template-columns: 1fr 2fr 1fr;
    }
  }
</style>
